{
  "name": "@tonybfox/threejs-tools",
  "version": "0.0.1",
  "description": "Collection of reusable Three.js tools including camera switcher, grid, and measurement utilities.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "dependencies": {
    "@tonybfox/threejs-camera": "workspace:*",
    "@tonybfox/threejs-grid": "workspace:*",
    "@tonybfox/threejs-measurements": "workspace:*",
    "@tonybfox/threejs-terrain": "workspace:*",
    "@tonybfox/threejs-asset-loader": "workspace:*",
    "@tonybfox/threejs-sunlight": "workspace:*",
    "@tonybfox/threejs-compass": "workspace:*"
  },
  "keywords": [
    "threejs",
    "tools",
    "camera",
    "grid",
    "measurements",
    "3d"
  ],
  "author": "Tony Fox",
  "license": "MIT"
}
